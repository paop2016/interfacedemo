	    android:layout_marginLeft="10dp"
	    android:id="@+id/donesubjectId"
	    android:layout_below="@id/nameId"
	    android:text="完成学科:"
	    android:textSize="15sp"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    />
	<TextView 
	    android:layout_toRightOf="@id/donesubjectId"
	    android:layout_below="@id/nameId"
	    android:id="@+id/donesubject1Id"
	    android:text="13科"
	    android:textSize="15sp"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    />
	<TextView 
	    android:layout_toRightOf="@id/donesubject1Id"
	    android:layout_below="@id/nameId"
