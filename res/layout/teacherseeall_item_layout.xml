	    android:textSize="15sp"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    />
	<TextView 
	    android:layout_toRightOf="@id/failsubject1Id"
	    android:layout_below="@id/nameId"
	    android:layout_marginLeft="10dp"
	    android:id="@+id/certificateId"
	    android:text="证书:"
	    android:textSize="15sp"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    />
	<TextView 
	    android:layout_toRightOf="@id/certificateId"
	    android:layout_below="@id/nameId"
	    android:id="@+id/certificate1Id"
	    android:text="1个"
	    android:textSize="15sp"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
	    />
</RelativeLayout>
