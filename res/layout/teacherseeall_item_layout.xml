	    android:layout_toRightOf="@id/xuehaoId"
	    android:layout_marginLeft="10dp"
	    android:id="@+id/banjijiaId"
	    android:text="班级:"
	    android:textSize="15sp"
	    android:layout_width="wrap_content"
		android:layout_height="wrap_content"
